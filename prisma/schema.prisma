generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String    @id @default(uuid())
  name     String
  email    String    @unique
  password String
  accounts Account[]

  @@map("users")
}

model Account {
  id             String @id @default(uuid())
  bank           String
  branch         String
  account_number String

  user    User   @relation(fields: [user_id], references: [id])
  user_id String

  @@map("accounts")
}
